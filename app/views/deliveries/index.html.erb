<p id="notice"><%= notice %></p>

<h1>Справочник "Доставок"</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Тип доставки</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.name %></td>
        <td><%= delivery.phone %></td>
        <td><%= link_to 'Подробнее', delivery %></td>
        <td><%= link_to 'Редактировать', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Удалить', delivery, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

