<p id="notice"><%= notice %></p>

<h1>Препараты</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Стоимость (руб.)</th>
      <th>Дата изготовления</th>
      <th>Срок годности (лет)</th>
      <th>Описание</th>
      <th>Изготовитель</th>
      <th>Тип</th>
      <th>Поставщик</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preparats.each do |preparat| %>
      <tr>
        <td><%= preparat.name %></td>
        <td><%= preparat.cost %></td>
        <td><%= preparat.dateofmanufacturer %></td>
        <td><%= preparat.shelflife %></td>
        <td><%= preparat.description %></td>
        <td>
          <% @manufacturers.each do |manufacturer| %>
            <% if manufacturer.id == preparat.manufacturer_id %>
               <%= manufacturer.name %>
            <% end %>
          <% end %>
        </td>
        <td>
            <% @types.each do |type| %>
            <% if type.id == preparat.type_id %>
               <%= type.typeform %>
            <% end %>
            <% end %>
        </td>
        <td>
            <% @providers.each do |provider| %>
            <% if provider.id == preparat.provider_id %>
               <%= provider.name %>
            <% end %>
            <% end %>
        </td>
        <td><%= link_to 'Показать', preparat %></td>
        <td><%= link_to 'Редактировать', edit_preparat_path(preparat) %></td>
        <td><%= link_to 'Удалить', preparat, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4>
<%= link_to 'Добавить новый препарат', new_preparat_path %><br /><br />
<%= link_to "Выйти на главное меню", :controller => "welcome" %></h4>
