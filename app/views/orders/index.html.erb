<p id="notice"><%= notice %></p>

<h1>Заказы</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Номер заказа №</th>
      <th>Дата размещения</th>
      <th>Дата исполнения</th>
      <th>Стоимость доставки</th>
      <th>Клиент</th>
      <th>Доставка</th>
      <th>Сотрудник</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.datepublic %></td>
        <td><%= order.dateperformance %></td>
        <td><%= order.costdelivery %></td>
        <td>
          <% @clients.each do |client| %>
            <% if client.id == order.client_id %>
               <%= client.name %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% @deliveries.each do |delivery| %>
            <% if delivery.id == order.delivery_id %>
               <%= delivery.name %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% @employees.each do |employee| %>
            <% if employee.id == order.employee_id %>
               <%= employee.family %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Подробнее', order %></td>
        <td><%= link_to 'Редактировать', edit_order_path(order) %></td>
        <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4>
<%= link_to 'Добавить новый заказ', new_order_path %><br /><br />
<%= link_to "Выйти на главное меню", :controller => "welcome" %>
</h4>
