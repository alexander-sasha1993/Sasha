<table>
  <thead>
    <tr>
      <th>Должность</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= link_to 'Подробнее', position %></td>
        <td><%= link_to 'Редактировать', edit_position_path(position) %></td>
        <td><%= link_to 'Удалить', position, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

