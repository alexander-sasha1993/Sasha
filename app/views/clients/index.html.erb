<p id="notice"><%= notice %></p>

<h1>Справочник "Клиентов"</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Фамилия, Имя и Отчество</th>
      <th>Адрес</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.adress %></td>
        <td><%= client.phone %></td>
        <td><%= link_to 'Подробнее', client %></td>
        <td><%= link_to 'Редактировать', edit_client_path(client) %></td>
        <td><%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4>
<%= link_to 'Добавление нового клиента', new_client_path %><br /><br />
<%= link_to "Выйти на главное меню", :controller => "welcome" %>
</h4>
