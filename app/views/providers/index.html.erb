<p id="notice"><%= notice %></p>

<h1>Справочник "Поставщиков"</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Адресс</th>
      <th>Телефон</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.adress %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.email %></td>
        <td><%= link_to 'Подробнее', provider %></td>
        <td><%= link_to 'Редактировать', edit_provider_path(provider) %></td>
        <td><%= link_to 'Удалить', provider, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4>
<%= link_to 'Добавить нового поставщика', new_provider_path %><br /><br />
<%= link_to "Выйти на главное меню", :controller => "welcome" %></h4>
